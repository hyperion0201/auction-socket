<Window x:Class="Client.AuctionResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Confirm Payment" Height="400" Width="400">
    <Canvas>
        <TextBlock Text="Congratulation! Auction success!"  Canvas.Left="112" Canvas.Top="34"/>
        <TextBlock Text="Fill this infomation to complete: " Canvas.Left="114" Canvas.Top="76"/>
        <TextBlock Text="Bank ID" Canvas.Left="54" Canvas.Top="119"/>
        <TextBox Name="bankIDTextbox" Width="300" Height="35" Canvas.Left="54" Canvas.Top="151"/>
        <TextBlock Text="Card ID"  RenderTransformOrigin="2.544,6.789" Canvas.Left="54" Canvas.Top="206"/>
        <TextBox Name="cardIDTextbox" Width="300" Height="35" Canvas.Left="54" Canvas.Top="233"/>
        <Button Name="finishButton" Click="FinishButton_Click" Content="Finish" Width="100" Height="35" RenderTransformOrigin="2.134,4.709" Canvas.Left="141" Canvas.Top="291"/>
    </Canvas>
</Window>
